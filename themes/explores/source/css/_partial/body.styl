main
{
    overflow: hidden;
}
.above-the-fold
{
    filter: blur(5px);
}

header.fixed + main .above-the-fold
{
    filter: none;
}

.section-header
{
    font-size: 7vw;

    display: flex;

    height: 14vw;
    margin: -7vw 0;

    transform: skewY(-8deg);

    background: #f0f0f0;

    align-items: center;
    justify-content: center;
}
.section-header:nth-of-type(2n)
{
    transform: skewY(8deg);
}
.section-header h2
{
    font-family: Anders;
}


section.with-image
{
    overflow: auto;

    padding: 100vh 0 30px;
    /* to make room for the background image */
    padding: calc(100vh + 14vw) 0 30px;

    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    background-size: cover;
}
section.with-image.post
{
    padding: 150px 0 30px;
}
.section-image
{
    position: absolute;
    z-index: -1;

    width: .1px;
    height: .1px;
}
.container
{
    position: relative;

    margin: 0 3vw 14vw;

    background: #f0f0f0;
}

.container:after
{
    position: absolute;

    content: '';

    border-width: 13.16vw 0 0 94vw;
    border-style: solid;
    border-color: #f0f0f0 transparent;;
}

section:nth-of-type(2n + 1) .container:after
{
    border-width: 13.16vw 94vw 0 0;
}
.content
{
    max-width: 640px;
    margin: 0 auto;
    padding: 10px 40px 30px;
}
ul li
{
    margin-bottom: 10px;
}
ul li,
.content p
{
    line-height: 1.3em;
}

.btn
{
    position: relative;

    display: inline-block;
    overflow: hidden;

    margin: .4em;
    padding: 1em;

    cursor: pointer;
    -webkit-transform: perspective(1px) translateZ(0);
            transform: perspective(1px) translateZ(0);
    vertical-align: middle;
    text-decoration: none;

    color: #fff;
    background: #b27895;
    box-shadow: 0 0 1px transparent;

    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.btn:before
{
    position: absolute;
    z-index: -1;
    right: 100%;
    bottom: 0;
    left: 0;

    height: 4px;

    content: '';
    -webkit-transition-timing-function: ease-out;
            transition-timing-function: ease-out;
    -webkit-transition-duration: .3s;
            transition-duration: .3s;
    -webkit-transition-property: right;
            transition-property: right;

    background: #814564;
}
.btn:hover:before,
{
    right: 0;
}


@media only screen and (min-width: 781px)
{
    .container
    {
        width: 50vw;
        margin-right: auto;
    }
    section:nth-of-type(2n + 1) .container
    {
        margin-right: 3vw;
        margin-left: auto;
    }

    .container:after
    {
        border-width: 7vw 0 0 50vw;
    }

    section:nth-of-type(2n + 1) .container:after
    {
        border-width: 7vw 50vw 0 0;
    }
}
